{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "scripts/**/*.ts",
    "utils/**/*.ts",
    "services/**/*.ts",
    "types-master.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
